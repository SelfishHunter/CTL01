package interest_calculator;

// import java.io.*;

public class I_calculator 
{
	private double Rate,Time,Si,Principle,C_Principle,C_Rate,C_Time,Num1,Num2,Num3,Num4,Num5;

	public double getC_Principle() {
		return C_Principle;
	}

	public void setC_Principle(double c_Principle) {
		C_Principle = c_Principle;
	}

	public double getNum1() {
		return Num1;
	}

	public void setNum1(double num1) {
		Num1 = num1;
	}

	public double getNum2() {
		return Num2;
	}

	public void setNum2(double num2) {
		Num2 = num2;
	}

	public double getNum3() {
		return Num3;
	}

	public void setNum3(double num3) {
		Num3 = num3;
	}

	public double getNum4() {
		return Num4;
	}

	public void setNum4(double num4) {
		Num4 = num4;
	}

	public double getNum5() {
		return Num5;
	}

	public void setNum5(double num5) {
		Num5 = num5;
	}

	public void setRate(double rate) {
		Rate = rate;
	}

	public void setTime(double time) {
		Time = time;
	}

	public void setSi(double si) {
		Si = si;
	}

	public void setPrinciple(double principle) {
		Principle = principle;
	}

	public void setC_Rate(double c_Rate) {
		C_Rate = c_Rate;
	}

	public void setC_Time(double c_Time) {
		C_Time = c_Time;
	}
	
	public double getRate() {
		return Rate;
	}

	public double getTime() {
		return Time;
	}

	public double getSi() {
		return Si;
	}

	public double getPrinciple() {
		return Principle;
	}

	public double getC_Rate() {
		return C_Rate;
	}

	public double getC_Time() {
		return C_Time;
	}

	public void SI()
	 {
		 double si = (Principle*Time*Rate);
		System.out.println("Simple Interest is "+si);

	 }
	 public double Avg_Num()
	 {
		 return (Num1+Num2+Num3+Num4+Num5)/5;
	 }
	 public double Compound_interest()
	 {
		 return C_Principle*(Math.pow(1 + C_Rate , C_Time)) ;
	 }

}
